<mvc:View controllerName="eshm.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    class="loginView">
    <Page showHeader="false" class="loginPage">
        <l:Grid defaultSpan="L12 M12 S12" class="loginGrid">
            <l:content>
                <VBox alignItems="Center" justifyContent="Center" class="loginContainer">
                    <items>
                        <Image src="./img/logo.png" width="150px" class="sapUiSmallMarginBottom loginLogo" />
                        <Title text="EHSM Portal" level="H1" titleStyle="H1" class="loginTitle sapUiMediumMarginBottom"/>
                        
                        <Panel width="350px" class="loginPanel">
                            <content>
                                <VBox class="sapUiSmallMargin">
                                    <Label text="Employee ID" labelFor="empIdInput" design="Bold"/>
                                    <Input id="empIdInput" placeholder="Enter Employee ID" width="100%" value="{/empId}"/>
                                    
                                    <Label text="Password" labelFor="passwordInput" design="Bold" class="sapUiSmallMarginTop"/>
                                    <Input id="passwordInput" type="Password" placeholder="Enter Password" width="100%" value="{/password}"/>
                                    
                                    <Button text="Login" type="Emphasized" width="100%" press="onLogin" class="sapUiMediumMarginTop loginButton"/>
                                </VBox>
                            </content>
                        </Panel>
                    </items>
                </VBox>
            </l:content>
        </l:Grid>
    </Page>
</mvc:View>
